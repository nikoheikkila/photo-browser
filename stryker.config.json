{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config was generated using 'stryker init'. Please see the guide for more information: https://stryker-mutator.io/docs/stryker-js/guides/svelte",
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "mutate": [
    "src/lib/**/*.ts"
  ],
  "reporters": [
    "progress",
    "clear-text",
    "html"
  ],
  "ignoreStatic": true,
  "thresholds": {
    "break": 100
  },
  "incremental": true,
  "incrementalFile": "reports/stryker-incremental.json",
  "checkers": [
    "typescript"
  ],
  "tsconfigFile": "tsconfig.json",
  "typescriptChecker": {
    "prioritizePerformanceOverAccuracy": true
  }
}
